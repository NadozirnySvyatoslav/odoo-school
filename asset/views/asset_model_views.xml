<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="asset_model_action_view_form" model="ir.ui.view">
        <field name="name">asset_model.form</field>
        <field name="model">asset.model</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="asset_model_action_view_list">
        <field name="name">Asset models</field>
        <field name="model">asset.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="asset_model_action">
        <field name="name">Asset models</field>
        <field name="res_model">asset.model</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>