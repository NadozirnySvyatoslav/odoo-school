<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_contact_person_action_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.contact_person.form</field>
        <field name="model">hr_hospital.contact_person</field>
        <field name="arch" type="xml">
            <form string="Contact person">
                <sheet>
                    <group>
                        <group>
                            <field name="surname"/>
                            <field name="first_name"/>
                            <field name="sex"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="photo" widget="image"/>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="hospital_contact_person_action_view_list">
        <field name="name">Contact persons</field>
        <field name="model">hr_hospital.contact_person</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sex"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hospital_contact_person_action">
        <field name="name">Contact persons</field>
        <field name="res_model">hr_hospital.contact_person</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>