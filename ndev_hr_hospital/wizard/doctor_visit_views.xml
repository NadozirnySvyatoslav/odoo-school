<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="doctor_visit_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.visit.form</field>
        <field name="model">hr_hospital.doctor.visit</field>
        <field name="arch" type="xml">
            <form string="Plan visits">
                <sheet>
                    <group>
                        <group>
                            <field name="doctor_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="visit_start_hour"/>
                            <field name="visit_end_hour"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_set" type="object" string="Calculate visits" class="btn-primary" data-hotkey="q"/>
                    <button string="Discard" special="cancel" data-hotkey="z" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
