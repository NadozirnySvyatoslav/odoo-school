<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="hospital_patient_action_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.patient.form</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                                type="object"
                                name="action_add_visit"
                                class="oe_stat_button">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Add visit</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="surname"/>
                            <field name="first_name"/>
                            <field name="sex"/>
                            <field name="birthday"/>
                            <field name="age"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="passport_no"/>
                            <field name="doctor_id"/>
                            <field name="contact_id"/>
                        </group>
                        <group>
                            <field name="photo" widget="image"/>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="description"/>
                            </page>
                            <page string="History of doctors changes">
                                <field name="doctor_change_history_ids">
                                    <tree>
                                        <field name="date" readonly='1'/>
                                        <field name="doctor_id" readonly='1'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="hospital_patient_action_view_list">
        <field name="name">Patients</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sex"/>
                <field name="age"/>
                <field name="birthday"/>
                <field name="doctor_id"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hospital_patient_action">
        <field name="name">Patients</field>
        <field name="res_model">hr_hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>