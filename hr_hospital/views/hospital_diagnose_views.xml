<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_diagnose_action_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.diagnose.form</field>
        <field name="model">hr_hospital.diagnose</field>
        <field name="arch" type="xml">
            <form string="Diagnose">
                <sheet>
                    <group>
                        <group>
                            <field name="visit_id" invisible="1"/>
                            <field name="doctor_id"/>
                            <field name="patient_id"/>
                            <field name="date"/>
                            <field name="disease_id"/>
                        </group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="hospital_diagnose_action_view_pivot">
        <field name="name">Diagnoses</field>
        <field name="model">hr_hospital.diagnose</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="date" type="row"/>
                <field name="doctor_id" type="row"/>
                <field name="patient_id" type="row"/>
                <field name="disease_id" type="col"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="hospital_diagnose_action_view_list">
        <field name="name">Diagnoses</field>
        <field name="model">hr_hospital.diagnose</field>
        <field name="arch" type="xml">
            <tree>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="date"/>
                <field name="disease_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hospital_diagnose_action">
        <field name="name">Diagnoses</field>
        <field name="res_model">hr_hospital.diagnose</field>
        <field name="view_mode">pivot,tree,form</field>
    </record>
</odoo>