<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_visit_action_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.visit.form</field>
        <field name="model">hr_hospital.visit</field>
        <field name="arch" type="xml">
            <form string="visit">
                <header>
                    <button name="action_ready" attrs="{'invisible': [('state', '!=', 'draft')]}" string="Ready"
                            type="object" data-hotkey="r"/>
                    <button name="action_done"
                            attrs="{'invisible': [('state', 'in', ['need_confirm','done','canceled'])]}" string="Done"
                            type="object" data-hotkey="d"/>
                    <button name="action_cancel"
                            attrs="{'invisible': [('state', 'in', ['need_confirm','done','canceled'])]}" string="Cancel"
                            type="object" data-hotkey="c"/>
                    <button name="action_confirm" attrs="{'invisible': [('state', '!=', 'need_confirm')]}"
                            string="Confirm" type="object" data-hotkey="s"/>
                    <button name="set_diagnose" attrs="{'invisible': [('state', 'in', ['done','canceled'])]}"
                            string="Set diagnose" type="object" data-hotkey="a"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="DONE" bg_color="bg-success"
                            attrs="{'invisible':[('state','!=','done')]}"/>
                    <widget name="web_ribbon" title="CANCELED" bg_color="bg-danger"
                            attrs="{'invisible':[('state','!=','canceled')]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="patient_id" context="{'default_patient_id':patient_id}"/>
                            <field name="doctor_id" context="{'default_doctor_id':doctor_id}"/>
                            <field name="planned_date"/>
                            <field name="diagnose_id"/>
                        </group>
                        <group>
                        </group>
                        <notebook>
                            <page string="Analyses">
                                <field name="analyses_ids"
                                       context="{'default_doctor_id':doctor_id,'default_patient_id':patient_id}">
                                    <kanban class="o_kanban_mobile">
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click">
                                                    <div class="oe_kanban_details">
                                                        <div>
                                                            <field name="name"/>
                                                        </div>
                                                        <div>
                                                            <field name="date"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_visit_calendar_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.visit.form</field>
        <field name="model">hr_hospital.visit</field>
        <field name="arch" type="xml">
            <form string="visit">
                <sheet>
                    <group>
                        <field name="state" attrs="{'invisible':True}"/>
                        <field name="name"/>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="planned_date"/>
                        <field name="diagnose_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="hospital_visit_action_view_list">
        <field name="name">visits</field>
        <field name="model">hr_hospital.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="planned_date"/>
                <field name="diagnose_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="hospital_visit_action_view_calendar">
        <field name="name">visits</field>
        <field name="model">hr_hospital.visit</field>
        <field name="arch" type="xml">
            <calendar string="Visits" date_start="planned_date" mode="month" color="patient_id" quick_add="False"
                      form_view_id="%(hr_hospital.hospital_visit_calendar_view_form)d">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="state" widget="badge"/>
            </calendar>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hospital_visit_action">
        <field name="name">Visits</field>
        <field name="res_model">hr_hospital.visit</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>

</odoo>