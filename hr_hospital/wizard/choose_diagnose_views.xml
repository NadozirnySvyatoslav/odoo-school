<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="choose_diagnose_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.choose.diagnose.form</field>
        <field name="model">hr_hospital.choose_diagnose</field>
        <field name="arch" type="xml">
            <form string="Diagnose">
                <sheet>
                    <group>
                        <group>
                            <field name="visit_id" invisible="1"/>
                            <field name="doctor_id" invisible="1"/>
                            <field name="patient_id" invisible="1"/>
                            <field name="date" invisible="1"/>
                            <field name="disease_id"/>
                        </group>
                        <field name="description"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_set" type="object" string="Set" class="btn-primary" data-hotkey="q"/>
                    <button string="Discard" special="cancel" data-hotkey="z" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
