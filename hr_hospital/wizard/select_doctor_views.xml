<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="select_doctor_view_form" model="ir.ui.view">
      <field name="name">hr_hospital.select.doctor.form</field>
      <field name="model">hr_hospital.select_doctor</field>
      <field name="arch" type="xml">
        <form string="Diagnose">
          <sheet>
            <group>
              <group>
                <field name="visit_ids" invisible="1"/>
                <field name="doctor_id"/>
              </group>
            </group>
          </sheet>
          <footer>
            <button name="action_set" type="object" string="Set" class="btn-primary" data-hotkey="q"/>
            <button string="Discard" special="cancel" data-hotkey="z" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_select_doctor" model="ir.actions.act_window">
      <field name="name">Set doctor</field>
      <field name="res_model">hr_hospital.select_doctor</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_model_id" ref="model_hr_hospital_visit"/>
      <field name="binding_view_types">list</field>
      <field name="binding_type">action</field>
    </record>

  </data>
</odoo>
